<!DOCTYPE html>

<html>
  <head>
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <% var gameInfo; %>
    <meta charset="UTF-8" />
    <title>Tic Tac Toe</title>
    <link rel="stylesheet" href="static/style.css" />
  </head>

  <body>
    <table>
      <tr>
        <td class="cell" id="0"></td>
        <td class="cell" id="1"></td>
        <td class="cell" id="2"></td>
      </tr>
      <tr>
        <td class="cell" id="3"></td>
        <td class="cell" id="4"></td>
        <td class="cell" id="5"></td>
      </tr>
      <tr>
        <td class="cell" id="6"></td>
        <td class="cell" id="7"></td>
        <td class="cell" id="8"></td>
      </tr>
    </table>
    <div class="endgame">
      <div class="text"></div>
    </div>
    <div class="results">
      <i>Welcome</i> <b><%= player.username %></b><br /><br />
      Your results:<br />
      Win: <%= player.noWin %> <br />Tie: <%= player.noTie %> <br />Lose: <%=
      player.noLose %><br /><br />
      <form action="main">
        <button>Quit</button>
      </form>
      <button id="startGameBtn" onClick="startGame()">
        Play again!
      </button>
    </div>
    <div class="results">
      <i>Players who played in this room.</i><br /><br />
      <% if(gameInfo) { for(var i= 0 ; i < gameInfo[0].length; ++i) { %>
      <p>
        <%= i+1 %>. <%= gameInfo[0][i].username %>
      </p>
      <% }}; %>
    </div>

    <script src="static/script.js"></script>
    <script>
      $(document).ready(() => {
        $("#startGameBtn").click((e) => {
          location.reload();
        });
      });
    </script>
  </body>
</html>
